<h2>Messages for <%= @product.name %></h2>
<% if @product.reviews.count == 0 %>
	<div class="review-case">No messages yet.</div>
<% end %>

<% @product.reviews.each do |review| %>
	<% if (current_user.id == @product.user_id) || (current_user.id == review.user_id) %>
		<div class="review-case">
			<article>
				<%= review.comment %><br><br>
				<strong><%= review.user.first_name %></strong> <br>
				<%= "#{review.created_at.to_formatted_s(:long_ordinal)}" %>
			</article>
			<% if current_user.id == review.user_id %>
				<div class="action-button-column">
					<%= link_to button_tag("X", class: "delete"), product_review_path(@product, review), confirm: "Are you sure you want to delete this message?", method: :delete %>
				</div>
			<% end %>
		</div>
	<% end %>
<% end %>
