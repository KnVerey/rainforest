<h2>Reviews for <%= @product.name %></h2>

<% @product.reviews.each do |review| %>
	<% unless review.user.nil? %>
		<div class="review-case">
			<article>
				<strong><%= review.comment %></strong><br>
				<em>Written by <%= review.user.username %> on <%= review.created_at %></em>
			</article>
			<% if current_user.id == review.user_id %>
				<div class="action-button-column">
					<%= link_to button_tag("X", class: "delete"), product_review_path(review.product_id, review.id), confirm: "Are you sure you want to delete this review?", method: :delete %>
				</div>
			<% end %>
		</div>
	<% end %>
<% end %>
