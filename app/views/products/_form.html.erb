<%= form_for @product do |p| %>
	<% if @product.errors.any? %>
	<div id="error-explanation">
		<h3>Uh oh! I found <%= pluralize(@product.errors.count, "problem") %> with your form:</h3>
		<ul>
			<% @product.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= p.label :name %> <br>
	<%= p.text_field :name %>
	<br>
	<%= p.label :formatted_price, "Price" %> <br>
	$<%= p.text_field :formatted_price %>
	<br>
	<%= p.label :description %> <br>
	<%= p.text_area :description %>
	<br>
	<%= p.label :photo %> <br>
	<%= p.text_field :photo %>
	<br><br>
	<%= p.submit %>
<% end %>