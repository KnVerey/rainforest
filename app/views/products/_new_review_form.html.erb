<section class="new-review-form">
	<h4>Interested? Send a message!</h4>

	<% if current_user %>
		
		<%= form_for([@product, @review], :remote => true) do |f| %>
			<% if @review.errors.any? %>
				<div class="error-explanation">
					<h2>There were <%= pluralize(@review.errors.count, "problem") %> with your review: </h2>
					<ul>
						<%= @review.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= f.text_area :comment %>
			<%= f.submit "Post message to owner" %>

		<% end %>
	<% else %>
		<p>Please <%= link_to "log in", new_session_path %> to write a message.</p>
	<% end %>
</section>