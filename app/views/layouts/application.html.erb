<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:notice] %>
		<p class="notice"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:alert] %>
		<p class="alert"><%= flash[:alert] %></p>
	<% end %>

	<p class="user-info">
		<% if current_user %>
			Signed in as <%= current_user.first_name + " " + current_user.last_name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
		<% else %>
			<%= link_to button_tag("LOG IN"), new_session_path %>
			New user? <%= link_to "Create an account", new_user_path %>
		<% end %>
	</p>

<%= yield %>

</body>
</html>
