<% message = @message if !message %>
<% if (current_user.id == @product.user_id) || (current_user.id == message.user_id) %>
	<div class="message-case">
		<article class="message">
			<%= message.comment %><br><br>
			<strong><%= message.user.first_name %></strong> <br>
			<%= "#{message.created_at.to_formatted_s(:long_ordinal)}" %>
		</article>
			<div class="action-button-column">
				<% if current_user.id == message.user_id %>
					<%= link_to button_tag("X", class: "delete"), product_message_path(@product, message), confirm: "Are you sure you want to delete this message?", method: :delete, data: { remote: true } %>
				<% elsif current_user.id == @product.user_id %>
					<%= mail_to(message.user.email, button_tag("âœ‰", class: "reply"), subject: @product.name, body:"Hi #{message.user.first_name}!\n\nThis is a reply to the message you sent me on Rainforest about my listing \"#{@product.name}\":\n\     |  #{message.comment}" ) %>
				<% end %>
			</div>
	</div>
<% end %>
