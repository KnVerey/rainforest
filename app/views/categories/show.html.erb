<h1 class="centered-h1">Category: <%= @category.name %></h1>

<% if @category.products.empty? %>
	<p class="centered">There aren't any listings here yet.</p>
<% end %>

<div class="thumbnails h-full">
	<% @category.products.each do |p| %>
		<a href=<%= product_path(p) %>>
			<div class="product-image container" style="background-image:url(<%= p.photo %>); background-size:cover">
				<h3><%= p.name %>
				<br>
				<%= p.formatted_price %></h3>
			</div>
		</a>
	<% end %>
	<div class="product-image placeholder"></div>
	<div class="product-image placeholder"></div>
</div>